                <div class="card-body">
                    <h3 class="card-title">Joshua Stefan</h3>
                    <span class="card-text">Farmer</span>
                </div>
            </div>
        </div>

        <!-- Second Team Member -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img src="img/person_2.jpg" alt="Ben Anderson" class="card-img-top img-fluid">
                <div class="card-body">
                    <h3 class="card-title">Ben Anderson</h3>
                    <span class="card-text">Farmer</span>
                </div>
            </div>
        </div>

        <!-- Third Team Member -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
